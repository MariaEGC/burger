<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-2">
      <h3>Burgers ready to eat</h3>
      <ul>
        {{#each burgers}}
          {{#unless this.devoured}}
            <li class="burger-list">{{this.burger_name}}
              <button type="button" class="btn btn-primary devour-btn" data-id="{{id}}">Devour it!</button>
            </li>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-5 offset-md-1">
      <h3>Burgers that have been eaten</h3>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li class="burger-list-eaten">{{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="submit-row">
    <div  class="col-s12">
      <h4>Make a new burger!</h4>
        <form action="/burgers" method="POST">
            <input type="text" id="name" name="burger_name" placeholder="">
            <button type="submit" class="btn btn-danger">Submit</button>
        </form>
    </div>
</div>